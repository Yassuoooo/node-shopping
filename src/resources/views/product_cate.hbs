<div class="row products">
    {{#each products}}
        <div class="col-xs-12 col-md-4 p">
            <a class="pa" href="/products/{{this.category}}/{{this.slug}}">
                <img class="pimage" src="/product_images/{{this._id}}/{{this.image}}" alt="Product's image">
            </a>
            <h3>{{this.title}}</h3>
            {{!-- <h4>${{this.price.toFixed 2}}</h4> --}}
            <h4>${{formatCurrency price}}</h4>
            <a class="vd" href="/products/{{this.category}}/{{this.slug}}">View Details</a>
        </div>
    {{/each}}
</div>